		]]>


</select>
<select id="selectListJoin" resultMap="joinMap">

		<![CDATA[
		
		SELECT E.ENO, E.ENAME, E.JOB, E.MANAGER, E.HIREDATE, E.SALARY, E.COMMISSION, D.DNO, D.DNAME, D.LOC
		FROM EMPLOYEE E, DEPARTMENT D
		WHERE E.DNO = D.DNO
		
		]]>

</select>

<select id="selectListJoin2" resultMap="allJoinmap">

		<![CDATA[
		SELECT
		E.EMPLOYEE_ID,E.FIRST_NAME,E.LAST_NAME,E.EMAIL,E.PHONE_NUMBER,E.HIRE_DATE,E.JOB_ID,E.SALARY,E.COMMISSION_PCT,E.MANAGER_ID,
		E.DEPARTMENT_ID,D.DEPARTMENT_NAME,D.LOCATION_ID,l.STREET_ADDRESS,l.POSTAL_CODE,l.CITY,l.STATE_PROVINCE,l.COUNTRY_ID,
		J.START_DATE,J.END_DATE	
		FROM EMPLOYEES E, DEPARTMENTS D, LOCATIONS L, JOB_HISTORY J
		WHERE E.DEPARTMENT_ID = D.DEPARTMENT_ID
		AND D.LOCATION_ID = L.LOCATION_ID
		AND J.JOB_ID = E.JOB_ID
		
		]]>

</select>

<select id="selectListJoin3" resultType="allJoinVO">

		<![CDATA[
		
		SELECT
		E.EMPLOYEE_ID,E.FIRST_NAME,E.LAST_NAME,E.EMAIL,E.PHONE_NUMBER,E.HIRE_DATE,E.JOB_ID,E.SALARY,E.COMMISSION_PCT,E.MANAGER_ID,
		E.DEPARTMENT_ID,D.DEPARTMENT_NAME,D.LOCATION_ID,l.STREET_ADDRESS,l.POSTAL_CODE,l.CITY,l.STATE_PROVINCE,l.COUNTRY_ID,
		J.START_DATE,J.END_DATE	
		FROM EMPLOYEES E, DEPARTMENTS D, LOCATIONS L, JOB_HISTORY J
		WHERE E.DEPARTMENT_ID = D.DEPARTMENT_ID
		AND D.LOCATION_ID = L.LOCATION_ID
		AND J.JOB_ID = E.JOB_ID
		
		]]>

</select>



