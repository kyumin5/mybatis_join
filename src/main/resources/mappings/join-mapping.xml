<resultMap type="deptsVO" id="deptsmap">
	<id property="department_id" column ="DEPARTMENT_ID"/>
	<result property="department_name" column ="DEPARTMENT_NAME"/>
	<result property="manager_id" column ="MANAGER_ID"/>
	<result property="location_id" column ="LOCATION_ID"/>
</resultMap>


<resultMap type="empsVO" id="empsmap">
	<id property="employee_id" column ="EMPLOYEE_ID"/>
	<result property="first_name" column ="FIRST_NAME"/>
	<result property="last_name" column ="LAST_NAME"/>
	<result property="email" column ="EMAIL"/>
	<result property="phone_number" column ="PHONE_NUMBER"/>
	<result property="hire_date" column ="HIRE_DATE"/>
	<result property="job_id" column ="JOB_ID"/>
	<result property="salary" column ="SALARY"/>
	<result property="commission_pct" column ="COMMISSION_PCT"/>
	<result property="manager_id" column ="MANAGER_ID"/>
	<result property="department_id" column ="DEPARTMENT_ID"/>
</resultMap>

<resultMap type="jobhVO" id="jobhmap">
	<id property="employee_id" column ="EMPLOYEE_ID"/>
	<result property="start_date" column ="START_DATE"/>
	<result property="end_date" column ="END_DATE"/>
	<result property="job_id" column ="JOB_ID"/>
	<result property="department_id" column ="DEPARTMENT_ID"/>
</resultMap>

<resultMap type="locationVO" id="locationmap">
	<id property="location_id" column ="LOCATION_ID"/>
	<result property="street_address" column ="STREET_ADDRESS"/>
	<result property="postal_code" column ="POSTAL_CODE"/>
	<result property="city" column ="CITY"/>
	<result property="state_province" column ="STATE_PROVINCE"/>
	<result property="country_id" column ="COUNTRY_ID"/>
</resultMap>





<resultMap type="allJoinVO" id="allJoinmap">
	<collection property="detpsVO" resultMap="deptsmap"></collection>
	<collection property="empsVO" resultMap="empsmap"></collection>
	<collection property="jobhVO" resultMap="jobhmap"></collection>
	<collection property="locVO" resultMap="locationmap"></collection>


</resultMap>


